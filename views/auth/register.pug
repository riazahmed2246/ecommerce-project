extends ../layout

block content
  div(class="max-w-md mx-auto")
    h1(class="text-3xl font-bold mb-8") Register
    
    if error
      div(class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4")= error
    
    form(class="space-y-4" method="POST" action="/auth/register")
      div
        label(class="block text-gray-700 mb-2" for="name") Name
        input#name(class="w-full px-3 py-2 border rounded" type="text" name="name" required)
      
      div
        label(class="block text-gray-700 mb-2" for="email") Email
        input#email(class="w-full px-3 py-2 border rounded" type="email" name="email" required)
      
      div
        label(class="block text-gray-700 mb-2" for="password") Password
        input#password(class="w-full px-3 py-2 border rounded" type="password" name="password" required)
      
      button(class="w-full bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" type="submit") Register
      
    div(class="mt-4 text-center")
      a(class="text-blue-600" href="/auth/login") Already have an account? Login here